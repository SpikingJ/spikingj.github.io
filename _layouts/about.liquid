---
layout: default
---
<div class="about-page">
    <div class="container mt-5">
        <div class="row">
            <!-- Left Column -->
            <div class="col-md-4 text-center">
                <img src="{{ site.baseurl }}/assets/img/prof_pic.jpg" alt="Profile Picture" class="img-fluid rounded-circle">
                <h2>{{ site.first_name }} {{ site.last_name }}</h2>
                <p>{{ page.subtitle }}</p>
                <p>
                    <i class="fas fa-map-marker-alt"></i> London, UK <br>
                    <i class="fas fa-briefcase"></i> King's College London <br>
                    <i class="fas fa-graduation-cap"></i> 
                    <a href="https://scholar.google.co.uk/citations?hl=en&user=wZ2GlecAAAAJ&view_op=list_works&sortby=pubdate">Google Scholar</a>
                </p>
            </div>

            <!-- Right Column: About Me and Content -->
            <div class="col-md-8">
                <article>
                    <header class="post-header">
                        <h2>About Me</h2>
                    </header>
                    <div class="post-content">
                        {{ content }}
                    </div>

                    <!-- News Section -->
                    {% if page.news and site.announcements.enabled %}
                    <h2>News</h2>
                    {% include news.liquid limit=true %}
                    {% endif %}

                    <!-- Selected Publications Section -->
                    {% if page.selected_papers %}
                    <h2>Selected Publications</h2>
                    {% include selected_papers.liquid %}
                    {% endif %}

                </article>

                <!-- Clustrmaps Widget (after all sections) -->
                <div id="clustrmaps-widget" style="text-align: center; margin-top: 20px;">
                    <script type="text/javascript" id="clstr_globe" src="//clustrmaps.com/globe.js?d=6S1_klH-6jQahJbFleG831JfFePX1Gl-D1JUcSLZYOE"></script>
                </div>
            </div>
        </div> <!-- Close Row -->
    </div> <!-- Close Container -->
</div> <!-- Close About Page -->
