---
layout: default
---
<div class="about-page">
    <div class="container mt-5">
        <div class="row align-items-start">
            <!-- Left Column -->
            <div class="col-md-4 text-center d-flex flex-column align-items-center">
                <img src="{{ site.baseurl }}/assets/images/prof_pic.jpg" alt="Profile Picture" class="img-fluid rounded-circle profile-pic">
                <h2 class="mt-3">{{ site.first_name }} {{ site.last_name }}</h2>
                <p>{{ page.subtitle }}</p>
                <p>
                    <i class="fas fa-map-marker-alt"></i> London, UK <br>
                    <i class="fas fa-briefcase"></i> King's College London <br>
                    <i class="fas fa-graduation-cap"></i> 
                    <a href="https://scholar.google.co.uk/citations?hl=en&user=wZ2GlecAAAAJ&view_op=list_works&sortby=pubdate">Google Scholar</a>
                </p>
            </div>

            <!-- Right Column -->
            <div class="col-md-8">
                <article>
                    <header class="post-header">
                        <h2>About Me</h2>
                    </header>
                    <div class="post-content">
                        {{ content }}
                    </div>


                    {% if page.selected_papers %}
                    <h2>Selected Publications</h2>
                    {% include selected_papers.liquid %}
                    {% endif %}

                    <p><center>
                            <div id="clustrmaps-widget" style="width:100px">
